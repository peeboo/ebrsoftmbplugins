<Window x:Class="CoverArtConfig.RegWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Register" Height="294" Width="544">
    <Grid>
        <TextBox Height="23" Margin="177,0,51,78" Name="regKey" VerticalAlignment="Bottom" />
        <TextBlock Margin="38,12,34,119" Name="textBlock1" TextWrapping="Wrap" FontSize="14" IsEnabled="True">
            To register your copy of CoverArt please visit <Hyperlink NavigateUri="http://www.ebrsoft.com/registration" RequestNavigate="Hyperlink_RequestNavigate">this page</Hyperlink> and follow the instructions there.  Once you have received your registration key, copy it from the email and paste it in the field below. CoverArt will then run beyond the trial period.  
            <LineBreak/> <LineBreak/>
            Thank you for your support.
        </TextBlock>
        <Label Height="28" HorizontalAlignment="Left" Margin="38,0,0,75" Name="label1" VerticalAlignment="Bottom" Width="120">Registration Key</Label>
        <Button Height="30" Margin="0,0,133,20" Name="btnOK" VerticalAlignment="Bottom" FontSize="14" HorizontalAlignment="Right" Width="92" Click="btnOK_Click" IsDefault="True">OK</Button>
        <Button FontSize="14" Height="30" HorizontalAlignment="Right" IsDefault="False" Margin="0,0,35,20" Name="button1" VerticalAlignment="Bottom" Width="92" IsCancel="True">Cancel</Button>
    </Grid>
</Window>
