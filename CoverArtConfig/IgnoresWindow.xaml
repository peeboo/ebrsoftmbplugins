<Window x:Class="CoverArtConfig.IgnoresWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Ignores" Height="407" Width="608" Loaded="Window_Loaded">
    <Grid>
        <ListBox Margin="32,70,35,70" x:Name="lbxIgnores" ItemsSource="{Binding Path=ignores}"/>
        <Label Height="31" Margin="34,33,80,0" Name="label1" VerticalAlignment="Top">Ignore Items in the following locations (includes sub-folders):</Label>
        <Button Height="23" HorizontalAlignment="Left" Margin="34,0,0,26" Name="btnAdd" VerticalAlignment="Bottom" Width="75" Click="btnAdd_Click">Add...</Button>
        <Button Height="23" Margin="115,0,0,26" Name="btnRemove" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="74" Click="btnRemove_Click">Remove</Button>
        <Button Height="23" HorizontalAlignment="Right" Margin="0,0,35,26" Name="btnDone" VerticalAlignment="Bottom" Width="75" Click="btnDone_Click">Done</Button>
    </Grid>
</Window>
